@ViewData["Title"] = "Home Page - lista de ceps"
@model IEnumerable<_01_Controller.Models.CEPViewModel>


<div class="text-center">
    <h1 class="display-4">Welcome - Veja a lista de ceps que tenho disponível </h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>CEP</td>
                <td>Logradouro</td>
                <td>Bairro</td>
                <td>Cidade</td>
                <td>Estado</td>
                <td>Data do cadastro</td>
                <td>numero qualquer</td>
                <td></td>
            </tr>            
        </thead>
        <tbody> 
            @foreach(CEPViewModel cvm in Model){
                <tr>
                    <td>@cvm.CEP</td>
                    <td>@cvm.logradouro</td>
                    <td>@cvm.Bairro</td>
                    <td>@cvm.Cidade</td>
                    <td>@cvm.Estado</td>
                    <td>@cvm.DataDoCadastro</td>
                    <td>@cvm.numeroQq</td>
                    <td>
                        <a class="btn btn-warning mx-2" asp-controller="CEP" asp-action="cadastra" asp-route-id="@cvm.CEP">Editar</a>
                        <a class="btn btn-danger mx-2" asp-controller="CEP" asp-action="excluir" asp-route-id="@cvm.CEP">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
