@ViewData["Title"] = "Home Page - cadastro de cep"
@model _01_Controller.Models.CEPViewModel;

<H2>Cadastro de CEP</H2>

<form asp-action="cadastra")>
    <div class="form-group">        
        <label asp-for="CEP" class="control-label"></label>
        <input asp-for="CEP" class="form-control" readonly=@(!(Model is null)) />
        <span asp-validation-for="CEP" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="logradouro" class="control-label"></label>
        <input asp-for="logradouro" class="form-control"/>
        <span asp-validation-for="logradouro" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Cidade" class="control-label"></label>
        <input asp-for="Cidade" class="form-control"/>
        <span asp-validation-for="Cidade" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Bairro" class="control-label"></label>
        <input asp-for="Bairro" class="form-control"/>        
        <span asp-validation-for="Bairro" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" class="form-control"/>        
        <span asp-validation-for="Estado" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="DataDoCadastro" class="control-label"></label>
        <input asp-for="DataDoCadastro" class="form-control"/>        
        <span asp-validation-for="DataDoCadastro" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="numeroQq" class="control-label"></label>
        <input asp-for="numeroQq" class="form-control"/>        
        <span asp-validation-for="numeroQq" class="text-danger" />
    </div>
    <div class="form-group">
        <input type="submit" value=@((Model is null)?"Cadastrar":"Salvar") class="btn btn-primary"/>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}